<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="com.aptana.samples.samplespath">
      <category
            icon="icons/category.png"
            id="com.aptana.samples.tests.category"
            name="Test Samples">
      </category>
      <samplesinfo
            category="com.aptana.samples.tests.category"
            id="com.aptana.samples.tests.local"
            infoFile="samples/info.txt"
            name="Local">
         <local
               directory="samples/">
            <localDescription
                  description="Testing local sample"
                  name="test">
            </localDescription>
         </local>
         <include
               path="libs/">
         </include>
         <nature
               id="com.aptana.projects.webnature">
         </nature>
      </samplesinfo>
      <samplesinfo
            category="com.aptana.samples.tests.category"
            id="com.aptana.samples.test.remote"
            name="Remote">
         <remote
               description="Testing remote sample"
               url="git://github.com/aptana/remote_sample.git">
         </remote>
      </samplesinfo>
      <samplesinfo
            id="com.aptana.samples.tests.nocategory"
            name="Sample without a category">
         <remote
               url="sample_with_no_category">
         </remote>
      </samplesinfo>
   </extension>

</plugin>
