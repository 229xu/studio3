<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.aptana.editor.ruby.RubySourceEditor"
            contributorClass="com.aptana.editor.common.CommonTextEditorActionContributor"
            default="true"
            icon="icons/rb.png"
            id="com.aptana.editor.ruby"
            name="%editor.rb.name">
         <contentTypeBinding
               contentTypeId="com.aptana.contenttype.ruby">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="rb,rake,cgi,fcgi,rbx,rjs,gemspec,irbrc"
            file-names="Rakefile,Capfile"
            id="com.aptana.contenttype.ruby"
            name="%content-type.rb.name"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.aptana.editor.ruby.RubyPreferenceInitializer">
      </initializer>
   </extension>

</plugin>
