<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
 <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="org.eclipse.ui.edit.findbar"
            name="%ShowFindBar.command.name">
      </command>
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="org.eclipse.ui.edit.findbar.hide"
            name="%HideFindBar.command.name">
      </command>
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="org.eclipse.ui.edit.findbar.findNext"
            name="%FindNext.command.name">
      </command>
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="org.eclipse.ui.edit.findbar.findPrevious"
            name="%FindPrevious.command.name">
      </command>
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="org.eclipse.ui.edit.findbar.focusFind"
            name="%FocusFind.command.name">
      </command>
      <command
            categoryId="org.eclipse.ui.category.edit"
            id="org.eclipse.ui.edit.findbar.focusReplace"
            name="%FocusReplace.command.name">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.bindings">
      
      <!-- The following bindings are active once the Find Bar is visible -->
      <key
            commandId="org.eclipse.ui.edit.findbar.hide"
            contextId="org.eclipse.ui.textEditorScope.findbar"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="ESCAPE">
      </key>
      <key
            commandId="org.eclipse.ui.edit.findbar.hide"
            contextId="org.eclipse.ui.textEditorScope.findbar"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="F12">
      </key>
      
      <!-- Find Previous -->
      <key
            commandId="org.eclipse.ui.edit.findbar.findPrevious"
            contextId="org.eclipse.ui.textEditorScope.findbar"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+K">
      </key>
      
      <!-- Find Next -->
      <key
            commandId="org.eclipse.ui.edit.findbar.findNext"
            contextId="org.eclipse.ui.textEditorScope.findbar"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+K">
      </key>
      <key
            commandId="org.eclipse.ui.edit.findbar.findNext"
            contextId="org.eclipse.ui.textEditorScope.findbar"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="ENTER">
      </key>

      <!-- Focus the find combo -->      
      <key
            commandId="org.eclipse.ui.edit.findbar.focusFind"
            contextId="org.eclipse.ui.textEditorScope.findbar"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+F">
      </key>
      <!-- Focus the replace combo -->      
      <key
            commandId="org.eclipse.ui.edit.findbar.focusReplace"
            contextId="org.eclipse.ui.textEditorScope.findbar"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+E">
      </key>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.aptana.editor.findbar.impl.ShowFindBarHandler"
            commandId="org.eclipse.ui.edit.findbar">
         <activeWhen>
            <with variable="activeEditor">
                  <or>
                     <instanceof
                           value="com.aptana.editor.findbar.api.IFindBarDecorated">
                     </instanceof>
                     <adapt
                           type="com.aptana.editor.findbar.api.IFindBarDecorated">
                     </adapt>
                  </or>
            </with>
         </activeWhen>
         <enabledWhen>
            <with variable="activeEditor">
                  <or>
                     <instanceof
                           value="com.aptana.editor.findbar.api.IFindBarDecorated">
                     </instanceof>
                     <adapt
                           type="com.aptana.editor.findbar.api.IFindBarDecorated">
                     </adapt>
                  </or>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="%FindBar.context.description"
            id="org.eclipse.ui.textEditorScope.findbar"
            name="%FindBar.context.name"
            parentId="org.eclipse.ui.textEditorScope">
      </context>
   </extension>
   
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="com.aptana.ui.AptanaPreferencePage"
            class="com.aptana.editor.findbar.preferences.FindBarPreferencePage"
            id="com.aptana.editor.findbar.preferences.FindBarPreferencePage"
            name="%FindBar.preferences.name"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.aptana.editor.findbar.preferences.FindBarPreferencesInitializer">
      </initializer>
   </extension>

</plugin>
