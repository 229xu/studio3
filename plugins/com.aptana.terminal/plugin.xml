<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Aptana"
            id="com.aptana">
      </category>
      <view
            allowMultiple="true"
            category="com.aptana"
            class="com.aptana.terminal.views.TerminalView"
            icon="icons/terminal.png"
            id="com.aptana.terminal.views.TerminalView"
            name="%view.name">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <scheme
            description="%scheme.description"
            id="com.aptana.terminal.scheme"
            name="%scheme.name">
      </scheme>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.aptana.terminal.editor.TerminalEditor"
            default="false"
            icon="icons/terminal.png"
            id="com.aptana.terminal.TerminalEditor"
            name="%editor.name">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.elementFactories">
      <factory
            class="com.aptana.terminal.editor.TerminalElementFactory"
            id="com.aptana.terminal.TerminalElementFactory">
      </factory>
   </extension>
   <extension
         point="com.aptana.scripting.loadPaths">
      <loadPath
            id="terminal"
            name="terminal"
            path="scripting">
      </loadPath>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.aptana.terminal.EarlyStartup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.aptana.terminal.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
