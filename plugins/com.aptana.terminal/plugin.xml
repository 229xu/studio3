<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Aptana Terminal"
            id="com.aptana.terminal">
      </category>
      <view
            name="Terminal"
            icon="icons/terminal.png"
            category="com.aptana.terminal"
            class="com.aptana.terminal.views.TerminalView"
            id="com.aptana.terminal.views.TerminalView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="bottom"
               id="com.aptana.terminal.views.TerminalView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <scheme
            description="Scheme used when the Aptana Terminal is active"
            id="com.aptana.terminal.scheme"
            name="Terminal Key Binding Scheme">
      </scheme>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.aptana.terminal.editor.TerminalEditor"
            default="false"
            icon="icons/terminal.png"
            id="com.aptana.terminal.TerminalEditor"
            name="Terminal Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.elementFactories">
      <factory
            class="com.aptana.terminal.editor.TerminalElementFactory"
            id="com.aptana.terminal.TerminalElementFactory">
      </factory>
   </extension>

</plugin>
