if [ -f /etc/profile ] ; then . /etc/profile; fi
if [ -f ~/.bash_profile ] ; then . ~/.bash_profile; fi
if [ -f ~/.bash_login ] ; then . ~/.bash_login; fi
if [ -f ~/.profile ] ; then . ~/.profile; fi

if [ -f ~/.rvmrc ] ; then . ~/.rvmrc; fi
if [[ "$HOME" != `pwd` ]] ; then
  if [ -f .rvmrc ] ; then source .rvmrc; fi
fi
